<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.marcelocaiafa.app"
        version     = "3.0.0" >
    <name>Locales de comida</name>
    <description>
        APP para obtener info de locales de comida.
    </description>
    <author href="http://marcelocaiafa.com/" email="contact@marcelocaiafa.com">
      Marcelo Caiafa
    </author>
    <!-- https://build.phonegap.com/current-support -->
    <preference name="phonegap-version" value="cli-7.1.0" />
     <!-- plugins -->
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.2.0" />
    <plugin name="cordova-plugin-geolocation" spec="~4.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.3" />
    <!-- exit app -->
    <param name="android-package" value="kr.co.joycorp.cordova.exitapp" />
    
    <!-- network access -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <!-- Generar solo para Android -->
        <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="SplashShowOnlyFirstTime" value="false"/>
        <!-- resoluciones para iconos y splash screen -->
        <icon qualifier="ldpi" src="res/android/drawable-ldpi/icon.png" />
        <icon qualifier="mdpi" src="res/android/drawable-mdpi/icon.png" />
        <icon qualifier="hdpi" src="res/android/drawable-hdpi/icon.png" />
        <icon qualifier="xhdpi" src="res/android/drawable-xhdpi/icon.png" />
        <icon qualifier="xxhdpi" src="res/android/drawable-xxhdpi/icon.png" />
        <icon qualifier="xxxhdpi" src="res/android/drawable-xxxhdpi/icon.png" />
        <splash qualifier="land-ldpi" src="res/android/drawable-land-ldpi/screen.png" />
        <splash qualifier="land-mdpi" src="res/android/drawable-land-mdpi/screen.png" />
        <splash qualifier="land-hdpi" src="res/android/drawable-land-hdpi/screen.png" />
        <splash qualifier="land-xhdpi" src="res/android/drawable-land-xhdpi/screen.png" />
        <splash qualifier="land-xxhdpi" src="res/android/drawable-land-xxhdpi/screen.png" />
        <splash qualifier="land-xxxhdpi" src="res/android/drawable-land-xxxhdpi/screen.png" />
        <splash qualifier="port-ldpi" src="res/android/drawable-ldpi/screen.png" />
        <splash qualifier="port-mdpi" src="res/android/drawable-mdpi/screen.png" />
        <splash qualifier="port-hdpi" src="res/android/drawable-hdpi/screen.png" />
        <splash qualifier="port-xhdpi" src="res/android/drawable-xhdpi/screen.png" />
        <splash qualifier="port-xxhdpi" src="res/android/drawable-xxhdpi/screen.png" />
        <splash qualifier="port-xxxhdpi" src="res/android/drawable-xxxhdpi/screen.png" />
        
    </platform>
</widget>
